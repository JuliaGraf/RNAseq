// Global default params
params {

    // Input options
    input               = null
    genomeFasta         = null
    gtfFile             = null
    arm                 = null
    amd                 = null
}

process {
    container = 'ubuntu'

    if (params.arm) {

        withName: FASTQC {
            container = 'community.wave.seqera.io/library/fastqc:0.12.1--d3caca66b4f3d3b0'
        }

        withName: TRIMGALORE {
            container = 'community.wave.seqera.io/library/trim-galore:0.6.10--2379bccd9067a62e'
        }

        withName: STAR_GENOMEGENERATE {
            container = 'community.wave.seqera.io/library/star:2.7.11b--37b6a1381d347e82'
            memory = '4G'
            cpus = 3
        }

        withName: STAR_ALIGN {
            container = 'community.wave.seqera.io/library/star:2.7.11b--37b6a1381d347e82'
            memory = '4G'
            cpus = 3
        }

        withName: MARKDUPLICATES {
            container = 'community.wave.seqera.io/library/picard:3.2.0--24355d1ab3dcd768'
        }

    }

    else if (params.amd) {

        withName: FASTQC {
            container = 'community.wave.seqera.io/library/fastqc:0.12.1--5cfd0f3cb6760c42'
        }

        withName: TRIMGALORE {
            container = 'community.wave.seqera.io/library/trim-galore:0.6.10--e1d78c153f940cdf'
        }

        withName: STAR_GENOMEGENERATE {
            container = 'community.wave.seqera.io/library/star:2.7.11b--5111d41e4f526076'
            memory = '4G'
            cpus = 3
        }

        withName: STAR_ALIGN {
            container = 'community.wave.seqera.io/library/star:2.7.11b--5111d41e4f526076'
            memory = '4G'
            cpus = 3
        }

        withName: MARKDUPLICATES {
            container = 'community.wave.seqera.io/library/picard:3.2.0--aad6e5f2660fd968'
        }

        withName: RSEM_PREPARE_REFERENCE {
            container = 'community.wave.seqera.io/library/rsem:1.3.3--539955c7f58025db'
        }

    }

    else {

        withName: FASTQC {
            container = 'community.wave.seqera.io/library/fastqc:0.12.1--5cfd0f3cb6760c42'
        }

        withName: TRIMGALORE {
            container = 'community.wave.seqera.io/library/trim-galore:0.6.10--e1d78c153f940cdf'
        }

        withName: STAR_GENOMEGENERATE {
            container = 'community.wave.seqera.io/library/star:2.7.11b--5111d41e4f526076'
            memory = '4G'
            cpus = 3
        }

        withName: STAR_ALIGN {
            container = 'community.wave.seqera.io/library/star:2.7.11b--5111d41e4f526076'
            memory = '4G'
            cpus = 3
        }

        withName: MARKDUPLICATES {
            container = 'community.wave.seqera.io/library/picard:3.2.0--a506e02da279864a'
        }

    }

}

docker {
    enabled = true
}